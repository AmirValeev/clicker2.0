<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_setting_wallpaper"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.clicker20.SettingWallpaper"
    android:background="@drawable/metall_fon_carapiny_poverhnost_18408_1920x1080">

    <Button
        android:layout_width="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/mettalBtn"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/buttonswap"
        android:layout_height="100dp" />

    <Button
        android:text="@string/back"
        android:layout_width="125dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="26dp"
        android:id="@+id/backButton"
        android:onClick="backToMain"
        android:background="@drawable/ironbtnswapdefault" />

    <Button
        android:layout_width="match_parent"
        android:layout_marginTop="9dp"
        android:id="@+id/fireBtn"
        android:background="@drawable/buttonswapogonsetinterface"
        android:layout_below="@+id/mettalBtn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_height="100dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_marginTop="9dp"
        android:id="@+id/waterBton"
        android:layout_below="@+id/fireBtn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/buttonswapwater"
        android:layout_height="100dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/woodbtn"
        android:layout_marginTop="10dp"
        android:background="@drawable/woodmainbtnswap"
        android:layout_below="@+id/waterBton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
